{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/nextjs"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_WHATSAPP_NUMBER": "@whatsapp_number",
      "MONGODB_URI": "@mongodb_uri",
      "SMTP_HOST": "@smtp_host",
      "SMTP_USER": "@smtp_user",
      "SMTP_PASS": "@smtp_pass"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "regions": ["bom1"]
}